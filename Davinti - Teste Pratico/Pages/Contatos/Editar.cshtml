@page "/contatos/editar/{id}"
@model Davinti___Teste_Pratico.Pages.Editar

@{
}

<!DOCTYPE html>

<html>
<head>
    <title>Editar um cadastro</title>
</head>
<body>
<div>
    <h1>Editar Contato</h1>

    <form method="post">
        <div class="form-group mb-3">
            <label>Nome</label>
            <input class="form-control" required asp-for="contato.Nome" placeholder="Nome do contato" />
        </div>

        <div class="form-group mb-3">
            <label>Idade</label>
            <input class="form-control" required asp-for="contato.Idade" placeholder="Idade do contato" />
        </div>

        <h4>Telefones</h4>
        @if (Model.contato.Telefones != null)
        {
            @for (int i = 0; i < Model.contato.Telefones.Count; i++)
            {
                <div class="form-group mb-2">
                    <input class="form-control"
                           asp-for="@Model.contato.Telefones[@i].NumeroContato"
                           placeholder="Telefone" />
                    <input type="hidden" asp-for="@Model.contato.Telefones[@i].Id" />
                    <input type="hidden" asp-for="@Model.contato.Telefones[@i].IdContato" />
                </div>
            }
        }

        <br />
        <button type="submit" asp-page-handler="AddTelefone" class="btn btn-secondary me-2">+ Adicionar Telefone</button>
        <button type="submit" asp-page-handler="Salvar" class="btn btn-primary">Salvar</button>
        <a asp-page="/Contatos" class="btn btn-light">Voltar</a>
    </form>
</div>
</body>
</html>